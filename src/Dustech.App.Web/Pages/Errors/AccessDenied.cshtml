@page
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model Dustech.App.Web.Pages.Errors.AccessDeniedModel
@inject IStringLocalizer<AccessDeniedModel> Localizer
@inject IHtmlLocalizer<AccessDeniedModel> HtmlLocalizer


@section BeforeMain {
    <partial name="Shared/_Spacer"/>
}

<section class="access-denied container ">
    
        <div class="container mt-5">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h2 class="display-4 text-danger">@Localizer["AccessDenied"]</h2>
                    <p class="lead mt-3">@Localizer["Sorry"]</p>
                    <p>@Localizer["AboutToBeRedirected"]</p>
                    <p>@HtmlLocalizer["IfProblemsClickHere"]</p>
                </div>
            </div>
        </div>
    
</section>